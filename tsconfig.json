{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build/",
    "target": "es2018",
    "module": "node16",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
